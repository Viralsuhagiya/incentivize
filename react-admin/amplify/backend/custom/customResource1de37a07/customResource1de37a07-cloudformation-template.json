            {
              "DomainName": {
                "Fn::If": [
                  "CreateProdResources",
                  "protiv-production-1421321210.us-east-1.elb.amazonaws.com",
                  {
                    "Fn::If": [
                      "CreateTestResources",
                      "protiv-test-1115229247.us-east-1.elb.amazonaws.com",
                      {
                        "Fn::If": [
                          "CreateTestAuthResources",
                          "testauth-449810325.us-east-1.elb.amazonaws.com",
                          "testkiwi-430705049.us-east-1.elb.amazonaws.com"
                        ]
                      }
                    ]
                  }
                ]
              },
              "Id": "protivProductionLoadBalancerId",
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "http-only",
                "OriginReadTimeout":60
