    },
    "hostingS3AndCloudFrontS3BucketSecureURL": {
      "Type": "String",
      "Description": "Input parameter describing S3BucketSecureURL attribute for hosting/S3AndCloudFront resource"
    }
  },
  "Conditions": {
    "CreateProdResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "prod"
      ]
    },
    "CreateTestResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "test"
      ]
